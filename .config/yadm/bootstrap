sudo pacman -S gtk4-layer-shell neovim wl-clipboard nautilus rustup

cargo install https://github.com/saltchicken/hyprsnap

git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
~/.tmux/plugins/tpm/bin/install_plugins

ssh-keygen -t ed25519

IP="10.0.0.3"
HOSTNAME="master"
HOSTS_FILE="/etc/hosts"

echo "$IP $HOSTNAME" | sudo tee -a "$HOSTS_FILE" > /dev/null
echo "Set $HOSTNAME to $IP in $HOSTS_FILE"

ssh-copy-id master


